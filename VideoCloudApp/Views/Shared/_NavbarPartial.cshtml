@{
}

@using Microsoft.AspNetCore.Identity
@using VideoCloudApp.Areas.Identity.Data

@inject SignInManager<VideoCloudAppUser> SignInManager
@inject UserManager<VideoCloudAppUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <ul class="navbar-nav" style="display: inline-block">
        <li style="list-style-type: none; display: inline-block">
            <a class="main-page-navbar-button" asp-area="" asp-controller="Home" asp-action="Index">Vloud</a>
        </li>
        <li style="list-style-type: none; display: inline-block">
            <a class="main-page-navbar-button" asp-area="" asp-controller="FileUpload" asp-action="FileUpload">Upload file</a>
        </li>
    </ul>
    <div>
        <ul class="navbar-nav" style="display: inline-block">
            <li style="display: inline-block">
                <a id="manage" class="nav-link text-white" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
            </li>
            <li style="display: inline-block">
                <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button id="logout" type="submit" class="nav-link btn btn-link text-white">Logout</button>
                </form>
            </li>
        </ul>
    </div>
}
else
{
    <ul class="navbar-nav" style="display: inline-block">
        <li style="list-style-type: none; display: inline-block">
            <a class="main-page-navbar-button" asp-area="" asp-controller="Home" asp-action="Index">Vloud</a>
        </li>
    </ul>
    <div>
        <ul class="navbar-nav" style="display: inline-block">
            <li style="display: inline-block">
                <a class="nav-link text-white" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
            </li>
            <li style="display: inline-block">
                <a class="nav-link text-white" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
            </li>
        </ul>
    </div>
}
